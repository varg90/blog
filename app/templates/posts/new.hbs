{{outlet}}

<h2>Create Post</h2>
<form class="form form-horizontal" {{action "save" on="submit"}}>
  <div class="form-group">
    <label for="{{label}}">Title</label>
    {{input class="form-control" type="text" value=title size="50"}}
  </div>
  <div class="form-group">
    <label for="{{body}}">Body</label>
    {{textarea class="form-control" value=body cols="80" rows="6"}}
  </div>
  <div class="col-md-6">
    <button class="btn btn-primary btn-block" type="submit">Save</button>
  </div>
  <div class="col-md-6">
    <button class="btn btn-default btn-block" {{action "cancel"}}>Cancel</button>
  </div>
</form>
